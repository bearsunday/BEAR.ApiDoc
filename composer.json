{
    "name": "bear/api-doc",
    "description": "API Doc page class for BEAR.Sunday",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BEAR\\ApiDoc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FakeVendor\\FakeProject\\": "tests/Fake/app/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "ext-json": "*",
        "bear/resource": "^1.11.1",
        "twig/twig": "^2.5",
        "twig/extensions": "^1.5",
        "bear/aura-router-module": "^2.0.3",
        "manuelodelain/linkify-twig-extension": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "bear/app-meta": "^1.4",
        "bear/package": "^1.8"
    },
    "scripts": {
        "test": ["phpunit"],
        "tests": ["@cs", "phpstan analyse -l max src -c phpstan.neon --no-progress", "psalm --show-info=false", "@test"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    },
    "bin": [
        "bin/bear.apidoc"
    ]
}
